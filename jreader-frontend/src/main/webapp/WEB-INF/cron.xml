<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
	<cron>
		<url>/cron/refresh</url>
		<description>Refresh all feeds</description>
		<schedule>every 30 mins from 07:00 to 00:00</schedule>
		<timezone>Europe/Budapest</timezone>
		<target>jreader-backend</target>
	</cron>
	<cron>
		<url>/cron/cleanup</url>
		<description>Delete old non-starred entries</description>
		<schedule>every day 00:00</schedule>
		<timezone>Europe/Budapest</timezone>
		<target>jreader-backend</target>
	</cron>
</cronentries>