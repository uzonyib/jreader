<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>jreader</groupId>
	<artifactId>jreader</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<properties>
		<appengine.sdk.version>1.9.3</appengine.sdk.version>
		<spring.version>4.0.3.RELEASE</spring.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<ui.minify>false</ui.minify>
	</properties>
	
	<modules>
		<module>jreader-dao</module>
		<module>jreader-services</module>
		<module>jreader-frontend</module>
		<module>jreader-backend</module>
		<module>jreader-ear</module>
	</modules>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>jreader</groupId>
				<artifactId>jreader-dao</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
	        	<groupId>jreader</groupId>
	        	<artifactId>jreader-services</artifactId>
	        	<version>${project.version}</version>
	        </dependency>
	        <dependency>
				<groupId>jreader</groupId>
				<artifactId>jreader-frontend</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>
			<dependency>
				<groupId>jreader</groupId>
				<artifactId>jreader-backend</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>
	        <dependency>
	            <groupId>com.google.appengine</groupId>
	            <artifactId>appengine-api-1.0-sdk</artifactId>
	            <version>${appengine.sdk.version}</version>
	        </dependency>
			<dependency>
	        	<groupId>com.googlecode.objectify</groupId>
	        	<artifactId>objectify</artifactId>
	        	<version>5.0.2</version>
	        </dependency>
	        <dependency>
		  		<groupId>org.springframework</groupId>
		  		<artifactId>spring-core</artifactId>
		  		<version>${spring.version}</version>
		  	</dependency>
		  	<dependency>
		  		<groupId>org.springframework</groupId>
		  		<artifactId>spring-context</artifactId>
		  		<version>${spring.version}</version>
		  	</dependency>
	        <dependency>
	        	<groupId>org.springframework</groupId>
	        	<artifactId>spring-webmvc</artifactId>
	        	<version>${spring.version}</version>
	        </dependency>
	        <dependency>
			    <groupId>org.codehaus.jackson</groupId>
			    <artifactId>jackson-mapper-asl</artifactId>
			    <version>1.9.13</version>
			</dependency>
			<dependency>
				<groupId>org.testng</groupId>
				<artifactId>testng</artifactId>
				<version>6.8.8</version>
			</dependency>
			<dependency>
				<groupId>org.mockito</groupId>
				<artifactId>mockito-core</artifactId>
				<version>1.9.5</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<ui.minify>true</ui.minify>
			</properties>
		</profile>
	</profiles>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
		            <groupId>com.google.appengine</groupId>
		            <artifactId>appengine-maven-plugin</artifactId>
		            <version>${appengine.sdk.version}</version>
		    	</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <version>3.1</version>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
		</plugins>
	</build>
</project>
