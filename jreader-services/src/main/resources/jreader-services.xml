<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="classpath:/jreader-dao.xml" />
	
	<bean class="jreader.converter.ConversionFactory" id="conversionService">
		<constructor-arg>
			<list>
				<bean class="jreader.converter.RssFetchResultConverter" />
				<bean class="jreader.converter.FeedDtoConverter" />
				<bean class="jreader.converter.FeedEntryDtoConverter" />
				<bean class="jreader.converter.SubscriptionGroupDtoConverter" />
				<bean class="jreader.converter.SubscriptionDtoConverter" />
				<bean class="jreader.converter.ArchiveDtoConverter" />
				<bean class="jreader.converter.ArchivedEntryConverter" />
				<bean class="jreader.converter.ArchivedEntryDtoConverter" />
			</list>
		</constructor-arg>
	</bean>
	
	<bean class="jreader.domain.BuilderFactory" id="builderFactory" />
	
	<bean class="jreader.services.impl.UserServiceImpl" id="userService">
		<constructor-arg ref="userDao" />
	</bean>
	
	<bean class="jreader.services.impl.SubscriptionServiceImpl" id="subscriptionService">
		<constructor-arg ref="userDao" />
		<constructor-arg ref="subscriptionGroupDao" />
		<constructor-arg ref="subscriptionDao" />
		<constructor-arg ref="feedDao" />
		<constructor-arg ref="feedEntryDao" />
		<constructor-arg ref="rssService" />
		<constructor-arg ref="conversionService" />
		<constructor-arg ref="builderFactory" />
	</bean>
	
	<bean class="jreader.services.impl.FeedEntryServiceImpl" id="feedEntryService">
		<constructor-arg ref="userDao" />
		<constructor-arg ref="subscriptionGroupDao" />
		<constructor-arg ref="subscriptionDao" />
		<constructor-arg ref="feedEntryDao" />
		<constructor-arg ref="conversionService" />
	</bean>
	
	<bean class="jreader.services.impl.ArchiveServiceImpl" id="archiveService">
		<constructor-arg ref="userDao" />
		<constructor-arg ref="subscriptionGroupDao" />
		<constructor-arg ref="subscriptionDao" />
		<constructor-arg ref="feedEntryDao" />
		<constructor-arg ref="archiveDao" />
		<constructor-arg ref="archivedEntryDao" />
		<constructor-arg ref="conversionService" />
		<constructor-arg ref="builderFactory" />
	</bean>
	
	<bean class="jreader.services.impl.RssServiceImpl" id="rssService">
		<constructor-arg>
			<bean class="com.rometools.fetcher.impl.HttpURLFeedFetcher" />
		</constructor-arg>
		<constructor-arg ref="conversionService" />
	</bean>
	
	<bean class="jreader.services.impl.CronServiceImpl" id="cronService">
		<constructor-arg ref="subscriptionDao" />
		<constructor-arg ref="feedDao" />
		<constructor-arg ref="feedEntryDao" />
		<constructor-arg ref="rssService" />
		<constructor-arg ref="conversionService" />
        <constructor-arg>
            <bean class="jreader.services.impl.DateHelperImpl" />
        </constructor-arg>
	</bean>
	
</beans>
