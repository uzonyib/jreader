<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="classpath:/jreader-dao.xml" />
	
	<bean class="jreader.services.impl.RssServiceImpl" id="rssService">
		<constructor-arg>
			<bean class="jreader.services.impl.RomeFeedReader">
				<constructor-arg>
					<bean class="org.springframework.context.support.ConversionServiceFactoryBean">
						<property name="converters">
							<list>
								<bean class="jreader.converter.RssFetchResultConverter" />
							</list>
						</property>
					</bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	
	<bean class="jreader.services.impl.CronServiceImpl" id="cronService">
		<property name="subscriptionDao" ref="subscriptionDao" />
		<property name="feedDao" ref="feedDao" />
		<property name="feedEntryDao" ref="feedEntryDao" />
		<property name="rssService" ref="rssService" />
	</bean>
	
</beans>
