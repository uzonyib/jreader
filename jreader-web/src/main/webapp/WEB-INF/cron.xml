<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
	<cron>
		<url>/cron/refresh</url>
		<description>Refresh feeds</description>
		<schedule>every 15 mins from 00:00 to 23:45</schedule>
		<timezone>Europe/Budapest</timezone>
		<target>default</target>
	</cron>
	<cron>
		<url>/cron/cleanup</url>
		<description>Delete old non-bookmarked posts</description>
		<schedule>every day 23:00</schedule>
		<timezone>Europe/Budapest</timezone>
		<target>default</target>
	</cron>
</cronentries>
