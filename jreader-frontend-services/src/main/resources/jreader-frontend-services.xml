<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="classpath:/jreader-dao.xml" />
	<import resource="classpath:/jreader-rss.xml" />
	
	<bean id="frontendServicesMapper" class="org.dozer.DozerBeanMapper">
		<property name="mappingFiles">
			<list>
				<value>frontend-services-dozer.xml</value>
			</list>
		</property>
	</bean>
	
	<bean class="jreader.service.impl.UserServiceImpl" id="userService">
		<property name="userDao" ref="userDao" />
	</bean>
	
	<bean class="jreader.service.impl.SubscriptionServiceImpl" id="subscriptionService">
		<property name="userDao" ref="userDao" />
		<property name="subscriptionGroupDao" ref="subscriptionGroupDao" />
		<property name="subscriptionDao" ref="subscriptionDao" />
		<property name="feedDao" ref="feedDao" />
		<property name="feedEntryDao" ref="feedEntryDao" />
		<property name="rssService" ref="rssService" />
		<property name="mapper" ref="frontendServicesMapper" />
	</bean>
	
	<bean class="jreader.service.impl.FeedEntryServiceImpl" id="feedEntryService">
		<property name="userDao" ref="userDao" />
		<property name="subscriptionGroupDao" ref="subscriptionGroupDao" />
		<property name="subscriptionDao" ref="subscriptionDao" />
		<property name="feedEntryDao" ref="feedEntryDao" />
		<property name="mapper" ref="frontendServicesMapper" />
	</bean>
	
</beans>
